{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./lib/",
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "ES5",
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "**/*.spec.tsx"]
}
